{
  "type": "NavHost",
  "startDestination": "splash",
  "routes": [
    {
      "route": "splash",
      "screen": {
        "type": "Column",
        "modifier": {
          "fillMaxSize": true,
          "horizontalAlignment": "CenterHorizontally",
          "verticalArrangement": "Center",
          "padding": 24
        },
        "children": [
          {
            "type": "AsyncImage",
            "url": "https://mahninw29-cmd.github.io/NationWideRev/assets/sillia.png",
            "modifier": {
              "height": 180,
              "width": 180
            },
            "contentScale": "Fit"
          },
          {
            "type": "Text",
            "text": "Empower Your Experience",
            "fontSize": 30,
            "fontWeight": "Bold",
            "textAlign": "Center",
            "modifier": {
              "paddingTop": 20
            }
          },
          {
            "type": "Text",
            "text": "Seamless, intuitive, and modern.",
            "fontSize": 16,
            "textAlign": "Center",
            "color": "#666666",
            "modifier": {
              "paddingTop": 8
            }
          },
          {
            "type": "Button",
            "text": "Get Started",
            "action": "navigate:signin",
            "modifier": {
              "paddingTop": 32,
              "width": 200,
              "height": 48
            }
          }
        ]
      }
    },
    {
      "route": "signin",
      "screen": {
        "type": "Column",
        "modifier": {
          "fillMaxSize": true,
          "horizontalAlignment": "CenterHorizontally",
          "verticalArrangement": "Center",
          "padding": 24
        },
        "children": [
          {
            "type": "Text",
            "text": "Welcome Back",
            "fontSize": 32,
            "fontWeight": "Bold",
            "textAlign": "Center",
            "modifier": {
              "paddingBottom": 16
            }
          },
          {
            "type": "Text",
            "text": "Sign in to continue to your dashboard",
            "fontSize": 16,
            "textAlign": "Center",
            "color": "#555555",
            "modifier": {
              "paddingBottom": 32
            }
          },
          {
            "type": "Button",
            "text": "Sign in with Google",
            "action": "googleSignIn",
            "modifier": {
              "width": 240,
              "height": 48
            }
          },
          {
            "type": "Button",
            "text": "Sign in with Email",
            "action": "custom:showEmailSignInDialog",
            "modifier": {
              "paddingTop": 16,
              "width": 240,
              "height": 48
            }
          },
          {
            "type": "Text",
            "text": "Or start fresh with a new account",
            "fontSize": 14,
            "color": "#888888",
            "textAlign": "Center",
            "modifier": {
              "paddingTop": 24
            }
          }
        ]
      }
    },
    {
      "route": "home",
      "screen": {
        "type": "Column",
        "modifier": {
          "fillMaxSize": true,
          "horizontalAlignment": "CenterHorizontally",
          "verticalArrangement": "Top",
          "padding": 24
        },
        "children": [
          {
            "type": "Text",
            "text": "Dashboard",
            "fontSize": 28,
            "fontWeight": "Bold",
            "textAlign": "Center",
            "modifier": {
              "paddingBottom": 16
            }
          },
          {
            "type": "Text",
            "text": "Your personalized workspace for everything you need.",
            "fontSize": 16,
            "textAlign": "Center",
            "color": "#555555",
            "modifier": {
              "paddingBottom": 24
            }
          },
          {
            "type": "Button",
            "text": "View Alerts",
            "action": "custom:showAlertDialog",
            "modifier": {
              "width": 220,
              "height": 48
            }
          },
          {
            "type": "Button",
            "text": "Upload Image",
            "action": "custom:pickImageGallery",
            "modifier": {
              "paddingTop": 16,
              "width": 220,
              "height": 48
            }
          },
          {
            "type": "Button",
            "text": "Play Media",
            "action": "custom:playAudio",
            "modifier": {
              "paddingTop": 16,
              "width": 220,
              "height": 48
            }
          },
          {
            "type": "Button",
            "text": "Copy Important Info",
            "action": "custom:copyToClipboard:Your info has been copied!",
            "modifier": {
              "paddingTop": 16,
              "width": 220,
              "height": 48
            }
          },
          {
            "type": "Button",
            "text": "Load Latest Data",
            "action": "httpRequest:{\"url\":\"https://jsonplaceholder.typicode.com/todos/1\",\"method\":\"GET\"}",
            "modifier": {
              "paddingTop": 16,
              "width": 220,
              "height": 48
            }
          },
          {
            "type": "Button",
            "text": "Save Preferences",
            "action": "saveLocal:{\"theme\":\"dark\",\"notifications\":true}",
            "modifier": {
              "paddingTop": 16,
              "width": 220,
              "height": 48
            }
          },
          {
            "type": "Button",
            "text": "Profile Settings",
            "action": "navigate:profile",
            "modifier": {
              "paddingTop": 16,
              "width": 220,
              "height": 48
            }
          }
        ]
      }
    },
    {
      "route": "profile",
      "screen": {
        "type": "Column",
        "modifier": {
          "fillMaxSize": true,
          "horizontalAlignment": "CenterHorizontally",
          "verticalArrangement": "Center",
          "padding": 24
        },
        "children": [
          {
            "type": "Text",
            "text": "Your Profile",
            "fontSize": 28,
            "fontWeight": "Bold",
            "textAlign": "Center",
            "modifier": {
              "paddingBottom": 16
            }
          },
          {
            "type": "Text",
            "text": "Manage your account settings and preferences.",
            "fontSize": 16,
            "textAlign": "Center",
            "color": "#555555",
            "modifier": {
              "paddingBottom": 32
            }
          },
          {
            "type": "Button",
            "text": "Logout",
            "action": "logout",
            "modifier": {
              "width": 200,
              "height": 48
            }
          },
          {
            "type": "Button",
            "text": "Back to Dashboard",
            "action": "navigate:home",
            "modifier": {
              "paddingTop": 16,
              "width": 200,
              "height": 48
            }
          }
        ]
      }
    }
  ]
}
