{
  "type": "NavHost",
  "startDestination": "splash",
  "routes": [
    {
      "route": "splash",
      "screen": {
        "type": "Column",
        "padding": 24,
        "children": [
          {
            "type": "Box",
            "children": [
              {
                "type": "Image",
                "url": "https://mahninw29-cmd.github.io/NationWideRev/sillia.png",
                "size": 140,
                "contentDescription": "App Logo"
              }
            ]
          },
          {
            "type": "Spacer",
            "height": 32
          },
          {
            "type": "CircularProgressIndicator"
          },
          {
            "type": "Text",
            "text": "Checking your account...",
            "fontSize": 16,
            "padding": 16,
            "textAlign": "Center"
          },
          {
            "type": "Button",
            "text": "Continue",
            "action": "checkUserExistence"
          }
        ]
      }
    },
    {
      "route": "signin",
      "screen": {
        "type": "Column",
        "padding": 24,
        "children": [
          {
            "type": "Image",
            "url": "https://mahninw29-cmd.github.io/NationWideRev/sillia.png",
            "size": 120,
            "contentDescription": "App Logo"
          },
          {
            "type": "Spacer",
            "height": 24
          },
          {
            "type": "Text",
            "text": "Welcome to Sillia!",
            "fontSize": 20,
            "fontWeight": "Bold",
            "textAlign": "Center",
            "padding": 8
          },
          {
            "type": "Text",
            "text": "Sign in with Google to continue.",
            "fontSize": 14,
            "padding": 8,
            "textAlign": "Center"
          },
          {
            "type": "Spacer",
            "height": 24
          },
          {
            "type": "Button",
            "text": "Continue with Google",
            "action": "googleSignIn"
          },
          {
            "type": "Spacer",
            "height": 12
          },
          {
            "type": "TextButton",
            "text": "Already have an account? Go to Home",
            "route": "home"
          }
        ]
      }
    },
    {
      "route": "home",
      "screen": {
        "type": "Column",
        "padding": 24,
        "children": [
          {
            "type": "Text",
            "text": "Welcome back!",
            "fontSize": 22,
            "fontWeight": "Bold",
            "padding": 8
          },
          {
            "type": "Spacer",
            "height": 16
          },
          {
            "type": "Image",
            "url": "@local:profile_picture",
            "size": 90,
            "contentDescription": "User Profile Picture"
          },
          {
            "type": "Text",
            "text": "@local:user_name",
            "fontSize": 18,
            "padding": 8
          },
          {
            "type": "Text",
            "text": "@local:user_email",
            "fontSize": 14,
            "padding": 4
          },
          {
            "type": "Spacer",
            "height": 32
          },
          {
            "type": "OutlinedButton",
            "text": "Logout",
            "action": "logout"
          }
        ]
      }
    }
  ]
}
