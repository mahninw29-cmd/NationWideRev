{
  "screen": {
    "id": "profile",
    "title": "Profile",
    "elements": [
      {
        "type": "image",
        "shape": "circle",
        "source": "{profile_url}",
        "size": 120
      },
      {
        "type": "text",
        "text": "Name: {name}",
        "style": {
          "fontSize": 20,
          "fontWeight": "bold",
          "padding": 8
        }
      },
      {
        "type": "text",
        "text": "Email: {email}",
        "style": {
          "fontSize": 16,
          "color": "#666666",
          "padding": 4
        }
      }
    ]
  }
}
